
<!DOCTYPE html>
<html lang="en">
  <head>
    <title></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Sistema de Análise de Transações</title>

    @entryPointScripts('login')
  </head>
  <body>
  
  <section class="container-md  text-center mt-5">
    <h1>Sistema de Análise de Transações Financeiras</h1>
    <form class="mx-auto needs-validation text-left" style="width:40%;" novalidate id="login-form">
      <div class="text-start">
        <label for="email-login " class="form-label">Email</label>
        <input 
          type="email"
          class="form-control"
          required
          id="email-login"
          name="email"
          >
          <div class="valid-feedback">
            Email Válido!
          </div>

          <div class="invalid-feedback">
            Insira um Email Válido.
          </div>
      </div>
      <div class="text-start">
        <label for="pass-login " class="form-label">Senha</label>
        <input 
          type="password"
          class="form-control"
          required
          id="pass-login"
          name="password"
          >
          <div class="valid-feedback">
            Senha Ok!
          </div>

          <div class="invalid-feedback">
          Senha invalida!
          </div>
      </div>
      <button class="btn btn-primary d-block mt-3" type="submit">Login</button>
    </form>


  </section>


  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/ab5118b9cd.js" crossorigin="anonymous"></script>

  <!-- Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


  </body>
</html>
