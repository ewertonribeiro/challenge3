<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AdonisJS - A fully featured web framework for Node.js</title>
  @entryPointStyles('app')
  @entryPointScripts('app')
</head>

<body>

  <div class="users-container">
    <div class="users-title">
      <h1>Usuarios Cadastrados</h1>
    </div>

    <div class="users-table-container">

      <button type="button" class="new-user" id="new-user">Novo</button>

      <table class="users-table" id="users-table">

        <thead class="users-thead" id="users-thead">

          <tr>
            <td class="user-id">ID</td>
            <td class="user-nome">NOME</td>
            <td class="user-email">EMAIL</td>
            <td class="user-opcoes">OPÇÕES</td>
          </tr>
        </thead>

        <tbody class="users-tbody" id="users-tbody">
          <tr class="users-tr" id="users-tr">
            <td>3</td>
            <td>Raquel Oliveira</td>
            <td>raquel.araujo@gmail.com</td>
            <td>
              <div class="users-table-btns">
                <button type="button" class="btn-editar" id="btn-editar">Editar</button>
                <button type="button" class="btn-remover" id="btn-remover">Remover</button>
              </div>
            </td>
          </tr>
        </tbody>

      </table>

    </div>
  </div>
</body>

</html>
