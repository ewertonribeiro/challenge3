<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>AdonisJS - A fully featured web framework for Node.js</title>
  @entryPointStyles('app')
  @entryPointScripts('app')
</head>

<body>
  @!component('components/header',{
    active:'upload'
  })
  <div class="
    container-sm
    d-flex
    flex-column
    align-items-center
    justify-content-center
    mt-5
    text-center
    ">
    <h1 class="transacoes-title">Importar Transações</h1>
    <form
      class="
        d-flex
        flex-column
        mt-3
      "
      id="upload-form"
    >
      <label
        for="file"
        class="fs-4 mb-2"
      >
      Selecione o Arquivo para Upload
      </label>
      <div class="input-group mb-3">
        <button class="btn btn-outline-primary" type="submit" id="submit-button">Button</button>
        <input
          type="file"
          name="file"
          id="file"
          class="form-control"
          aria-label="Upload"
        >
      </div>

      <div
        class="
          d-flex
          d-none
          justify-content-start
          text-center
          mt-2
          p-1
          rounded
          container
          gap-5
        "
        id="message"
      >
        <button
          type="button"
          class="btn btn-secondary btn-sm rounded"
          id="close-message"
          >
          Fechar
        </button>
        <span class="text-white " id="message-span">Upload feito com sucesso</span>
      </div>

    </form>
  </div>

  <div
    class="
    container-fluid
    d-flex
    flex-column
    justify-content-center
    align-items-center
    "
    style="margin-top: 6rem;"
  >
        <h1 class="mb-1">Importações Realizadas</h1>
    <table
      id="table"
      class="
        container
        table
        table-striped
        table-secondary
      "
    >
      <thead class="container">

        <tr
          class="
            container
          "
          id="row-names"
        >
          <th class="fw-bold fs-4">Data das Transações</td>
          <th class="fw-bold fs-4">Data da Importação</td>
        </tr>
      </thead>
      <tbody
        class="mt-5 fw-regular fs-5"
        id="tbody"
      >
      @each(importacao in importacoes)
        <tr class="container">
         
          <td>{{importacao.dataTransacao}}</td>
          <td>{{importacao.dataImportacao}}</td>
        </tr>
      @endeach

      </tbody>
    </table>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>

</html>
