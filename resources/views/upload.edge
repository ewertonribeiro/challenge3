<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AdonisJS - A fully featured web framework for Node.js</title>
  @entryPointStyles('app')
  @entryPointScripts('app')
</head>

<body>
  <div class="transacoes">
    <h1 class="transacoes-title">Importar Transções</h1>
    <form class="transacoes-form" id="upload-form">
      <input type="file" name="file" id="file">
      <label for="file">Selecione o Arquivo para upload</label>
      <button type="submit" class="submit-button" id="submit-button">Submit</button>

      <div class="message hidden" id="message">
        <span id="message-span">Upload feito com sucesso</span>
      </div>
    </form>
  </div>

  <div class="table-container">
    <table id="table" class="table">
      <thead>
        <h1 class="table-title">Importações Realizadas</h1>
      </thead>
      <tbody class="table-body" id="tbody">
        <tr class="row-names" id="row-names">
          <td>Data das Transações</td>
          <td>Data da Importação</td>
        </tr>

      </tbody>
    </table>
  </div>
</body>

</html>
